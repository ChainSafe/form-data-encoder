{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/__helper__/**", "src/**/*.test.ts"],
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES2015",
    "module": "commonjs",
    "noImplicitAny": true,
    "baseUrl": "src",
    "checkJs": false,
    "allowJs": false,
    "skipLibCheck": false,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true
  }
}
